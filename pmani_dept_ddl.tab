Create Table MERCHANT(
    MERCH NUMBER(4,0),
    MERCH_NAME VARCHAR2(32) NOT NULL,
    MERCHR_PHONE VARCHAR2(20),
    MERCH_FAX VARCHAR2(20),
    CONSTRAINT "PK_MERCH" PRIMARY KEY (MERCH)
)
/
Create Table Buyer(
    BUYER NUMBER(4,0),
    BUYER_NAME VARCHAR2(32) NOT NULL,
    BUYER_PHONE VARCHAR2(20),
    BUYER_FAX VARCHAR2(20),
    USER_ID VARCHAR2(30),
    CONSTRAINT "PK_BUYER" PRIMARY KEY (BUYER)
)
/
Create Table Groups(
    GROUP_NO NUMBER(4,0) NOT NULL,
    GROUP_NAME VARCHAR2(20) NOT NULL,
    BUYER NUMBER(4,0),
    MERCH NUMBER(4,0),
    DIVISION NUMBER(4,0),
    CONSTRAINT "FK_GRP_BUYER" FOREIGN KEY (BUYER) REFERENCES BUYER (BUYER),
    CONSTRAINT "FK_GRP_MERCHANT" FOREIGN KEY (MERCH) REFERENCES MERCHANT (MERCH),
    CONSTRAINT "PK_GROUPS" PRIMARY KEY (GROUP_NO)
)
/
Create Table Deps(
    Dept Number(4,0) NOT NULL ENABLE,
    DEPT_NAME VARCHAR2(30) NOT NULL ENABLE,
    Buyer Number(4,0),
    MERCH NUMBER(4,0),
    PROFIT_CALC_TYPE NUMBER(1,0) NOT NULL ENABLE,
    PURCHASE_TYPE NUMBER(1,0) NOT NULL ENABLE,
    GROUP_NO NUMBER(4,0) NOT NULL,
    BUD_INT NUMBER(12,4),
    BUD_MKUP NUMBER(12,4) NOT NULL ENABLE,
    TOTAL_MARKET_AMT NUMBER(24,4),
    CONSTRAINT "CHK_DEPS_PURCHASE_TYPE" CHECK (PURCHASE_TYPE in (0,1)) ENABLE,
    CONSTRAINT "CHK_DEPS_PROFIT_CALC_TYPE" CHECK (PROFIT_CALC_TYPE in (1,2)) ENABLE,
    CONSTRAINT "FK_DEPS_GRP" FOREIGN KEY (GROUP_NO) REFERENCES GROUPS (GROUP_NO),
    CONSTRAINT "FK_DEPS_BUYER" FOREIGN KEY (BUYER) REFERENCES BUYER (BUYER),
    CONSTRAINT "FK_DEPS_MERCHANT" FOREIGN KEY (MERCH) REFERENCES MERCHANT (MERCH),
    CONSTRAINT "PK_DEPS" PRIMARY KEY (Dept)
)
/